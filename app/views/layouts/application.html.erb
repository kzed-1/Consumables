<!DOCTYPE html>
<html>
  <head>
    <title>Edibles</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if logged_in? %>
      <script type="text/javascript">
      window.currentUser =
        <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
    </script>
    <% end %>

    <script type="text/javascript">
      window.background = "<%= image_url("background.jpg")  %>"
    </script>
    <script type="text/javascript">
      window.logo = "<%= image_url("logo.png")  %>"
    </script>
    <script type="text/javascript">
      window.home = "<%= image_url("home.png")  %>"
    </script>
    <script type="text/javascript">
      window.user = "<%= image_url("user.png")  %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
